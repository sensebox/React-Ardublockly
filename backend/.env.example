# TFLite Backend Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Blockly Compiler Service URL
# This is the URL of the compiler service that compiles Arduino sketches
VITE_BLOCKLY_API=http://localhost:3000


# ============================================================================
# OPTIONAL CONFIGURATION (with defaults)
# ============================================================================

# Compilation Settings
# --------------------

# Maximum time to wait for sketch compilation (in seconds)
# Default: 120 seconds (2 minutes)
# Min: 10, Max: 600
COMPILATION_TIMEOUT=120

# Default board type for Arduino compilation
DEFAULT_BOARD=esp32:esp32:sensebox_eye

# Default optimization level for compilation
# Options: default, size, speed
# Default: default
DEFAULT_OPTIMIZATION=default


# Conversion Settings
# -------------------

# Maximum time to wait for TFLite conversion (in seconds)
# Default: 60 seconds
# Min: 10, Max: 600
CONVERSION_TIMEOUT=60


# Server Settings
# ---------------

# Maximum request size (in bytes)
# Default: 10485760 (10MB)
MAX_CONTENT_LENGTH=10485760

# Flask environment (development, production, testing)
# Default: development
FLASK_ENV=development

# Enable debug mode (true/false)
# Default: false
DEBUG=false


# Retry Settings
# --------------

# Maximum number of retry attempts for failed requests
# Default: 3
# Min: 1, Max: 10
MAX_RETRIES=3

# Delay between retry attempts (in seconds)
# Default: 2
RETRY_DELAY=2
